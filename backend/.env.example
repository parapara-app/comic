# SSH Tunnel Configuration (used by docker-compose.dev.yml)
# Path to your SSH private key for bastion host
BASTION_SSH_KEY_PATH=/path/to/your/ssh/private/key
# Bastion host credentials
BASTION_USER=your-bastion-username
BASTION_HOST=your-bastion-host.com
BASTION_PORT=22
# Target database host (as seen from bastion)
DB_TARGET_HOST=your-database-host-internal
DB_TARGET_PORT=5432
# Local port for the SSH tunnel
LOCAL_TUNNEL_PORT=5433
# SSH host key checking (no for development, yes for production)
SSH_STRICT_HOST_KEY_CHECKING=no

# PostgreSQL Connection Details (for the actual database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DATABASE=parapara
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Environment
RUST_LOG=debug
RUST_BACKTRACE=1